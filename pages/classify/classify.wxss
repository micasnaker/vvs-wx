page, .main {
  height: 100%;
}

.categroy-left {
  float: left;
  width: 150rpx;
  height: 100%;
  border-right: 1px solid #ddd;
  box-sizing: border-box;
  background-color: #f4f4f4;
}

.categroy-left .cate-list {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-left: 3px solid #fff;
  font-size: 13.5px;
}

.categroy-left .cate-list.on {
  color: #e51c23;
  border-color: #e51c23;
  background-color: #fff;
}

.categroy-right {
  float: right;
  width: 600rpx;
  height: 100%;
  overflow: hidden;
}

.cate-box {
  height: 100%;
  padding: 40rpx;
  box-sizing: border-box;
}

.cate-box .cate-banner image {
  display: block;
  width: 100%;
  height: 190rpx;
}

.cate-title {
  position: relative;
  height: 30rpx;
  line-height: 30rpx;
  padding: 30rpx 0 55rpx;
  text-align: center;
  color: #e51c23;
  font-size: 28rpx;
}

.cate-title::before {
  position: absolute;
  left: 130rpx;
  top: 43rpx;
  content: '';
  width: 70rpx;
  height: 4rpx;
  background: #e51c23;
}

.cate-title::after {
  position: absolute;
  right: 130rpx;
  top: 43rpx;
  content: '';
  width: 70rpx;
  height: 4rpx;
  background: #e51c23;
}

.product-list {
  display: inline-block;
  width: 160rpx;
  height: 160rpx;
  text-align: center;
  margin: 0 20rpx 20rpx 0;
  font-size: 24rpx;
}

.product-list image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.product-list:nth-child(3n) {
  margin-right: 0;
}

.product-content {
  display: flex;
  width: 100%;
}

.product-content text{
  height: 50rpx;
}

.title_wrap text{
  display: block;
}

.product-wrap image {
  width: 150rpx;
  height: 150rpx;
}

.product_price{
  display: flex;
  justify-content: space-evenly;
}